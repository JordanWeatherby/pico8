pico-8 cartridge // http://www.pico-8.com
version 27
__lua__

player = {}
player.x = 1*8
player.y = 14*8
player.sprite = 0
player.speed = 2

points = 0

function rendermove()
	player.sprite += 1
	if player.sprite > 3 then
		player.sprite = 0
	end
end

function move(dir)
	player.moving = true
	if dir == "⬅️" then
		player.x -= player.speed
	elseif dir == "➡️" then
		player.x += player.speed
	end
end

function _update()
	player.moving = false
	points += 1
	if btn(0) then
		move("⬅️")
		rendermove()
	elseif btn(1) then
		move("➡️")
		rendermove()
	else
		player.sprite = 0
	end
end

function _draw()
	cls()
	map(0,0,0,0,128,64)
	spr(player.sprite, player.x, player.y)
	print(points, 2, 2)
end
